<body>

<div class="container">
    <h2>Введите число</h2>
    <input type="text" id="numberInput" placeholder="Введите код (например, хуй)">
    <button onclick="checkNumber()">Проверить</button>
    <div id="output"></div>
</div>

<script>

    function checkNumber() {
        const inputElement = document.getElementById('numberInput');
        const outputElement = document.getElementById('output');
        

        const inputValue = inputElement.value.trim();
        

        if (inputValue === "17122025") 
        {
            outputElement.textContent = "https://www.youtube.com/watch?v=NriYl_1hxhM";
            outputElement.style.color = "green";
        } else 
        {
            outputElement.textContent = "Неверный код.";
            outputElement.style.color = "red";
        }
    }
</script>

</body>
